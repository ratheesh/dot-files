set arrowstyle=short
set autosourcereload
set ignorecase
set tabstop=8
set wrapscan


map <c>   :clear<CR>
map <b>   :break<CR>
map <F5>  :run<CR>
map <F7>  imake<CR><Esc>
map <F8>  :continue<CR>
map <F10> :next<CR>
map <F11> :step<CR>
map <F12> :finish<CR>

hi Statement ctermfg=5
hi Type      ctermfg=2
hi Constant  ctermfg=3
hi Comment   ctermfg=8
hi PreProc   ctermfg=5
hi Normal    ctermfg=7

hi StatusLine         	cterm=NONE ctermfg=0  ctermbg=7
hi SelectedLineArrow  	cterm=NONE ctermfg=10 ctermbg=6
hi IncSearch          	cterm=NONE ctermfg=3
hi Arrow              	cterm=bold ctermfg=12
hi SelectedLineNr     	cterm=NONE ctermfg=0  ctermbg=7
hi Logo 		cterm=NONE ctermfg=2  ctermbg=0
hi LineHighlight      	cterm=NONE ctermfg=10 ctermbg=0
hi Breakpoint         	cterm=bold ctermfg=7  ctermbg=1
hi DisabledBreakpoint 	cterm=NONE ctermfg=6  ctermbg=8

