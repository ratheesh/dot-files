[alias]
	lg       = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --abbrev-commit --date=relative
	undopush = push -f origin HEAD^:master
	tags     = tag -l
	branches = branch -a
	remotes  = remote -v
	cv       = commit -v

[user]
	name       = Ratheesh S
	email      = ratheeshreddy@gmail.com
	signingkey = B5A8692EC05DCFEA

[color]
	ui          = true
	diff        = true
	status      = true
	branch      = true
	interactive = true
	pager       = true

[color "branch"]
	current    = 25 italic
	local      = 180
	remote     = 65

[color "diff"]
	meta       = 65
	frag       = 180
	old        = 162
	new        = 25
	whitespace = 197 reverse
	plain      = 7

[color "status"]
	added     = 25
	changed   = 180
	untracked = 244

[color "decorate"]
	head         = 27
	branch       = 129 italic
	remoteBranch = 162
	tag          = 180

[merge]
	# include summaries of merged commits in newly created merge commit messages
	log = true

[sendemail]
	from           = Ratheesh S <ratheeshreddy@gmail.com>
	chainreplyto   = false
	smtpencryption = tls
	smtpserver     = smtp.gmail.com
	smtpserverport = 587
	smtpuser       = ratheeshreddy@gmail.com

[oh-my-zsh]
	hide-status = 1

[log]
	decorate    = auto

[format]
	pretty      = format:"%C(65)Commit%C(162): %C(103)%H%C(auto)%d%n%C(65)\
Author%C(162):%C(26 italic) %aN %C(66)<%aE>%n%C(65)\
Date  %C(162):%C(132) %ad%n%n%C(246)%w(0,4,4)%s%n%n%b"

[magit]
	extension   = stgit

[core]
	# editor = emacsclient -c
	# treat spaces before tabs, lines that are indented with 8 or more spaces,
	# and all kinds of trailing whitespace as an error
	whitespace = space-before-tab,indent-with-non-tab,trailing-space
	pager      = /bin/less -R

[apply]
	# detect whitespace errors when applying a patch
	whitespace      = fix

[branch]
	autosetuprebase = always

[credential]
	helper          = cache --timeout=3600

[commit]
	verbose         = true

